<% layout('/layouts/body') %>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Edit Campground <%= campgrounds.title %>
            </h1>
            <form action="/campgrounds/<%=campgrounds.id%>?_method=put" method="post" novalidate
                class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required value="<%=
                        campgrounds.title %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required value="
                    <%= campgrounds.location %> ">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="number">Price</label>
                    <div class="input-grounp">
                        <input class="form-control" type="number" id="number" name="campground[price]" required
                            value=<%=campgrounds.price %>>
                    </div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campground[description]]" required
                        rows="5"><%= campgrounds.description %> </textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input value="<%= campgrounds.image %> " class="form-control" type="text" id="image"
                        name="campground[image]" required>
                </div>

                <button type="submit" class="btn btn-success">submit</button>

            </form>
            <a href="\campgrounds" class="btn btn-secondary mt-3 mb-3">back</a>
        </div>
    </div>