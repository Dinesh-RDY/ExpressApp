<% layout('/layouts/body') %>
    <div>
        <a href="/campgrounds/new" class="btn btn-success">Make new campground</a>

    </div>
    <h1>All campgrounds </h1>

    <% for(camp of campgrounds){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src=<%=camp.image%> alt="" class="img-fluid center-cropped">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="\campgrounds\<%=camp.id%>" class="btn btn-primary">
                            <%= camp.title %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>